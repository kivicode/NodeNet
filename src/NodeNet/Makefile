# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  gl3w_config = debug
  imgui_config = debug
  imnodes_config = debug
  node_config = debug
endif
ifeq ($(config),release)
  gl3w_config = release
  imgui_config = release
  imnodes_config = release
  node_config = release
endif

PROJECTS := gl3w imgui imnodes node

.PHONY: all clean help $(PROJECTS) dependencies examples imnodes

all: $(PROJECTS)

dependencies: gl3w imgui

examples: node

imnodes: imnodes

gl3w:
ifneq (,$(gl3w_config))
	@echo "==== Building gl3w ($(gl3w_config)) ===="
	@${MAKE} --no-print-directory -C build/gmake -f gl3w.make config=$(gl3w_config)
endif

imgui:
ifneq (,$(imgui_config))
	@echo "==== Building imgui ($(imgui_config)) ===="
	@${MAKE} --no-print-directory -C build/gmake -f imgui.make config=$(imgui_config)
endif

imnodes:
ifneq (,$(imnodes_config))
	@echo "==== Building imnodes ($(imnodes_config)) ===="
	@${MAKE} --no-print-directory -C build/gmake -f imnodes.make config=$(imnodes_config)
endif

node: gl3w imgui imnodes
ifneq (,$(node_config))
	@echo "==== Building node ($(node_config)) ===="
	@${MAKE} --no-print-directory -C build/gmake -f node.make config=$(node_config)
	@echo "[ INFO] Starting..."
	@bin/Debug/node
endif

clean:
	@${MAKE} --no-print-directory -C build/gmake -f gl3w.make clean
	@${MAKE} --no-print-directory -C build/gmake -f imgui.make clean
	@${MAKE} --no-print-directory -C build/gmake -f imnodes.make clean
	@${MAKE} --no-print-directory -C build/gmake -f node.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   gl3w"
	@echo "   imgui"
	@echo "   imnodes"
	@echo "   node"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"